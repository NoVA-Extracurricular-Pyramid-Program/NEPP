{
  "name": "nepp-firebase-app",
  "description": "Firebase Cloud Functions for NEPP feedback email notifications",
  "version": "1.0.0",
  "main": "index.js",
  "dependencies": {
    "firebase-admin": "^11.0.0",
    "firebase-functions": "^4.0.0",
    "nodemailer": "^6.9.0"
  },
  "engines": {
    "node": "18"
  },
    "scripts": {
    "serve": "firebase serve --host localhost --port 5000",
    "deploy": "firebase deploy",
    "deploy:hosting": "firebase deploy --only hosting",
    "deploy:rules": "firebase deploy --only firestore:rules,storage",
    "deploy:production": "firebase use nepp-82074 && firebase deploy",
    "deploy:test": "firebase use nepp-test-server && firebase deploy"
  }
}
